using System;

class MainClass {
  public static void Main (string[] args) {
    Random randomNumber = new Random();
    int computerNumber = randomNumber.Next(100) + 1;
    int guessedNumber = 0;

    while (guessedNumber != computerNumber) 
    {
      Console.WriteLine("Guess a number: ");
      int.TryParse(Console.ReadLine(), out guessedNumber);

      if (guessedNumber > computerNumber) 
      {
        Console.WriteLine("{0} is too high!", guessedNumber);
      }
      else if (guessedNumber < computerNumber) 
      {
        Console.WriteLine("{0} is too low!", guessedNumber);
      }
      else  
      {
        Console.WriteLine("{0} is right! Congratulations.", guessedNumber);
      }
      
    }
  }
}
